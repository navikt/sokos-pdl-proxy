    "TjenestefeilResponse": {
      "type": "object",
      "properties": {
        "melding": {
          "type": "string",
          "description": "Informasjon om hva som er feil"
        }
      },
      "title": "TjenestefeilResponse",
      "description": "Responsobjekt ved feil i tjeneste"
    }
  }
